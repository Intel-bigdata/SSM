<!-- Do not modify this file directly.  Instead, copy entries that you -->
<!-- wish to modify from this file into ssm-site.xml and change them -->
<!-- there.  If ssm-site.xml does not already exist, create it.      -->

<configuration>
  <property>
    <name>smart.dfs.enabled</name>
    <value>true</value>
    <description>
      Enable NN and DN supporting for SSM if true.
      For SSM, all functions disabled except rpc and web service if false.
    </description>
  </property>

  <property>
    <name>smart.server.rpc.address</name>
    <value>0.0.0.0:7042</value>
    <description>rpc server of SSM</description>
  </property>

  <property>
    <name>smart.server.http.address</name>
    <value>0.0.0.0:7045</value>
    <description>HTTP server of SSM</description>
  </property>

  <property>
    <name>dfs.smart.poll.namenode.interval</name>
    <value>5</value>
    <description>Time interval in seconds for SSM to fetch info from NN</description>
  </property>

  <property>
    <name>smart.dfs.namenode.rpcserver</name>
    <value></value>
    <description>get namenode.rpcserver by ssm</description>
  </property>

  <property>
    <name>dfs.smart.agent.master.address</name>
    <value>127.0.0.1:7051</value>
    <description>SmartAgent master address</description>
  </property>
</configuration>
